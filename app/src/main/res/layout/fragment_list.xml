<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data >
        <variable
            name="viewModel"
            type="com.iotalabs.geoar.view.main.activity.DataBaseViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.iotalabs.geoar.view.main.activity.fragment.ListFragment">

        <FrameLayout
            android:id="@+id/frame_layout_fragent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants">

            <com.baoyz.swipemenulistview.SwipeMenuListView
                android:id="@+id/swipe_menu_list_friend"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"></com.baoyz.swipemenulistview.SwipeMenuListView>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/text_view_no_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="친구가 없습니다. 친구를 등록해주세요."
                android:textSize="16dp" />
        </FrameLayout>


    </FrameLayout>
</layout>