<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:iconSpaceReserved="false">
    <PreferenceCategory
        android:title="위치 설정"
        app:iconSpaceReserved="false">

        <SwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/ic_baseline_pin_drop_24"
            android:key="switch_my_location"
            android:title="내위치 on/off" />

        <SwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/ic_baseline_person_pin_circle_60"
            android:key="switch_friend_location"
            android:title="친구위치 on/off" />
        <SwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/ic_baseline_groups_24"
            android:key="switch_heatmap"
            android:title="히트맵 on/off" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="백그라운드 서비스"
        app:iconSpaceReserved="false">
        <SwitchPreference
            android:defaultValue="true"
            android:icon="@drawable/ic_baseline_explore_off_606060"
            android:key="switch_LocationService"
            android:title="백그라운드 위치 전송"
            android:summary="off 할 경우 백그라운드 상태에서 위치 정보를 전송하지 않습니다."
             />

    </PreferenceCategory>
</PreferenceScreen>